  &__count
    display inline-block
    flex 0 0 auto
    color var(--color-grey-500)

  &__panel
    margin-top rem(24px)
    &.active
      animation fadeIn .2s ease
    &:not(.active)
      display none

  &--sidebar-after
    width 100%
    & ^[0]__tabs
      width 100%
      margin 0
      padding 0
    & ^[0]__items
      justify-content space-between
      width 100%
    & ^[0]__item
      &:last-child
        padding 0
    & ^[0]__tab
      gap 2px

.tabs-panel
  &.active
    animation fadeIn .2s ease
  &:not(.active)
    display none

  &--slide
    &.active
      animation fadeInSlide .6s ease
