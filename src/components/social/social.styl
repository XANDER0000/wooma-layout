.social
  &__icons
    display flex
    flex-wrap wrap
    gap 12px
    margin 0
    padding 0
    list-style none
    li
      display flex
      margin 0
    a
      display flex
      color var(--color-gray-dark)
      transition all .2s ease
      &:hover
      &:focus-visible
        color var(--color-dark)
        text-decoration none
    .icon
    img
      transition all .2s ease
      size 20px

  &--white
    & ^[0]__icons
      a
        color var(--color-white)
        &:hover
        &:focus-visible
          color var(--color-gray)

  &--transform
    & ^[0]__icons
      a
        &:hover
        &:focus-visible
          transform translateY(-5px)

  &--apps
    display flex
    flex-direction row
    flex-wrap wrap
    gap 15px
    & ^[0]__icons
      flex-direction row
      gap 12px

  &--circle
    a
      display flex
      align-items center
      justify-content center
      size 30px
      border 1px solid var(--color-dark)
      border-radius 50%
      &:hover
      &:focus-visible
        background-color var(--color-dark)
        .icon
          fill var(--color-white)
    .icon
      fill var(--color-dark)
