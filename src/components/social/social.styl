.social
  &__icons
    display flex
    flex-wrap wrap
    gap 12px
    margin 0
    padding 0
    list-style none
    li
      display flex
      margin 0
    a
      display flex
      color var(--color-gray-dark)
      transition all .2s ease
      &:hover
      &:focus-visible
        color var(--color-dark)
        text-decoration none
    .icon
      size 20px
