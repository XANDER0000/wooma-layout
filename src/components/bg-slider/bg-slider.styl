.bg-slider
  position absolute
  top 0
  left 0
  display flex
  width 100%
  height 100%

  &__slide
    position relative
    &-bg
      width 100%
      height 100%
      object-fit cover
      object-position center
      vertical-align top
    &--filter
      &::after
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color var(--color-dark)
        opacity .4
        content ''
