.sidebar-after
  position fixed
  left 0
  z-index 999
  display flex
  flex-direction column
  width 100%
  min-width 260px
  max-width 100%
  height 100%
  overflow hidden
  background var(--color-white)
  transform translateX(-100%)
  opacity 0
  transition opacity .25s ease, transform .25s ease
  will-change transform
  custom-scrollbar(2px)
  &.is-open
    transform translateX(0%)
    opacity 1
  +above(48em)
    max-width 360px

  &__heading
    display flex
    gap 20px
    align-items center
    justify-content space-between
    min-height 60px
    padding-left 25px
    +above(48em)
      padding-left 30px

  &__btn-close
    position relative
    display block
    flex 0 0 auto
    size 20px
    margin 0
    padding 0
    background transparent
    border none
    &:hover
    &:focus-visible
      &::before
        transform rotate(-45deg)
      &::after
        transform rotate(45deg)
    &::before
    &::after
      position absolute
      top 46%
      left 1px
      width 90%
      height 2px
      background-color var(--color-dark)
      transform-origin 50% 50%
      opacity 1
      transition all .2s ease
      content ''
    &::before
      transform rotate(45deg)
    &::after
      transform rotate(-45deg)

  &__content
    custom-scrollbar(2px)
    &-heading
      display flex
      flex-wrap wrap
      gap 12px
      align-items center
      justify-content space-between
      margin-bottom 20px
      padding-bottom 10px
      color var(--color-dark)
      font-weight 500
      font-size rem(18px)
      text-transform capitalize
      border-bottom 1px solid var(--color-gray)
    &-action
      position absolute
      z-index 3
      flex-direction column
      width 100%
      height fit-content
      min-height 100%
      padding 25px
      background var(--color-white)
      transform translateX(-150%)
      opacity 0
      transition opacity .15s ease, transform .75s ease
      will-change transform
      +above(48em)
        padding 35px 30px
      &.active
        position relative
        transform translateX(0%)
        opacity 1

  &__categories
    display grid
    grid-template-columns repeat(3, 1fr)
    gap 15px
