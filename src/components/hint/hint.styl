.hint
  position absolute
  top auto
  right 50px
  display block
  padding 8px 9px 8px 9px
  color var(--color-white)
  font-size rem(12px)
  line-height 1
  white-space nowrap
  background-color rgba(51, 51, 51, .9)
  border-radius 3px
  box-shadow 0 7px 15px rgba(0, 0, 0, .3)
  transform translateZ(0)
  visibility hidden
  opacity 0
  transition all .3s ease
  pointer-events none

  &::after
    position absolute
    width 0
    height 0
    border-style solid
    content ''

  &--top
    right 50%
    bottom 50px
    transform translateX(50%)
    &::after
      top auto
      bottom -10px
      left 50%
      margin-left -5px
      border-color rgba(51, 51, 51, .9) transparent transparent transparent
      border-width 5px

  &--right
    left 50px
    &::after
      top 50%
      left -10px
      margin-top -5px
      border-color transparent rgba(51, 51, 51, .9) transparent transparent
      border-width 5px

  &--left
    right 50px
    &::after
      top 50%
      right -9px
      margin-top -5px
      border-color transparent transparent transparent rgba(51, 51, 51, .9)
      border-width 5px

  &--bottom
    top 50px
    right 50%
    transform translateX(50%)
    &::after
      top -10px
      left 50%
      margin-left -5px
      border-color transparent transparent rgba(51, 51, 51, .9) transparent
      border-width 5px
