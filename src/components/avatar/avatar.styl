.avatar
  display inline-block
  size 40px
  overflow hidden
  background-color var(--color-blue-200)
  background-image url(../img/avatar.svg)
  background-repeat no-repeat
  background-position center center
  background-size cover
  border-radius 50%
  aspect-ratio 1
  img
    width 100%
    height 100%
    object-fit cover

  &--large
    size 120px
