.avatar
  display inline-block
  size 100px
  overflow hidden
  background-color var(--color-gray-dark)
  background-image url(../img/avatar.png)
  background-repeat no-repeat
  background-position center center
  background-size cover
  border-radius 50%
  aspect-ratio 1
  img
    width 100%
    height 100%
    object-fit cover

  &--large
    size 120px
