.product-card
  display flex
  flex-direction column
  gap 15px
  align-items flex-start
  transition all .3s ease
  &:hover
  &:focus-visible
    & ^[0]__img
      img
        transform scale(1.05)
        opacity .8
    & ^[0]__btn
      background-color var(--color-white)
      &--hidden
        transform translateX(0)
        opacity 1
    & ^[0]__title
      &-transform
        &-first
          transform translateY(-100%)
        &-second
          top 0
          opacity 1

  &__img
    position relative
    flex 0 0 auto
    width 100%
    max-height 450px
    overflow hidden
    transition all .3s ease
    &--circle
      border-radius 50%
    &-link
      display block
      width 100%
      height 100%
      background var(--color-gray-soft)
    img
      width 100%
      height 100%
      max-height 100%
      object-fit cover
      transition all .3s ease

  &__labels
    position absolute
    top 10px
    left 10px
    z-index 2
    display flex
    flex-direction column
    gap 5px
    align-items flex-start
    &-item
      display flex
      align-items center
      min-height 20px
      padding 0 7px
      color var(--color-white)
      font-weight 600
      font-size rem(12px)
      background-color var(--color-dark)
      border-radius 3px
      &--red
        color var(--color-red)
        background-color var(--color-red-bg)
      &--green
        color var(--color-success)
        background-color var(--color-success-bg)
      &--yellow
        color var(--color-warning)
        background-color var(--color-warning-bg)

  &__btns
    position absolute
    top 10px
    right 10px
    z-index 2
    display flex
    flex-direction column
    gap 5px
    align-items flex-start

  &__btn
    position relative
    display flex
    align-items center
    justify-content center
    background-color transparent
    size 30px
    border none
    border-radius 50%
    transition all .3s ease
    &:hover
    &:focus-visible
      .icon
        fill var(--color-dark-soft)
      & ^[1]-hint
        right 40px
        visibility visible
        opacity 1

    .icon
      size 16px
      transition all .3s ease
      fill var(--color-dark)
    &--hidden
      transform translateX(calc(100% + 30px))
      opacity 0
    &--success
      .icon
        fill var(--color-green)

  &__content
    display flex
    flex-direction column
    gap 5px
    width 100%

  &__title
    display block
    margin 0
    padding 0
    font-weight 700
    font-size rem(14px)
    font-family $font-family-M
    line-height 1.4
    text-decoration none
    background none
    border none
    strong
      color var(--color-primary)
      font-weight 500
    &-transform
      position relative
      overflow hidden
      transform translateY(0)
      &-first
      &-second
        transition all .3s ease
      &-second
        position absolute
        top 100%
        left 0
        width 100%
        margin 0
        text-align left
        opacity 0
        &:hover
        &:focus-visible
          color var(--color-hover)

  &__price
    display flex
    flex-wrap wrap
    gap 5px
    width 100%
    color var(--color-dark-soft)
    font-size rem(13px)
    &-old
      text-decoration line-through
    &-multiplier
      color var(--color-dark)

  &__stars
    margin-left auto
