.logo
  display inline-block

  a
    color var(--color-dark)
    font-weight 700
    font-size rem(32px)
    letter-spacing 3px
    text-decoration none
    &:hover
      color inherit
      text-decoration none
    &:focus-visible
      outline-color var(--color-hover)
      outline-offset 6px
  svg
    fill currentColor
  img
    display block
    max-width 100%
    height auto
