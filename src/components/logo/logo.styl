.logo
  display inline-block

  a
    color var(--color-dark)
    font-weight 800
    font-size rem(24px)
    font-family $font-family-M
    text-transform uppercase
    text-decoration none
    &:hover
      color inherit
      text-decoration none
    &:focus-visible
      outline-color var(--color-hover)
      outline-offset 6px
  svg
    fill currentColor
  img
    display block
    max-width 100%
    height auto
