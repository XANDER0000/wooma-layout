.logo
  display inline-block

  a
    color inherit
    text-decoration none
    &:hover
      color inherit
      text-decoration none
    &:focus-visible
      outline-color var(--color-blue-400)
      outline-offset 6px
  svg
    fill currentColor
  img
    display block
    max-width 100%
    height auto

  &__path
    transition fill .3s ease
    &--blue
      fill #000082
      .header--transparent &
      .footer &
        fill #fff
      .header--transparent.header--scrolled &
        fill #000082
    &--red
      fill #d20000
      .header--transparent &
      .footer &
        fill #fff
      .header--transparent.header--scrolled &
        fill #d20000
