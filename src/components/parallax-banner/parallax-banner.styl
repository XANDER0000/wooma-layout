.parallax-banner
  position relative
  display flex
  align-items center
  padding rem(60px) rem(20px)
  background-repeat no-repeat
  background-position center center
  background-size cover
  background-attachment fixed
  &::before
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color var(--color-dark)
    opacity .3
    content ''
  +desktop()
    min-height 520px
    padding rem(80px) rem(50px)

  &__content
    position relative
    z-index 2
    display flex
    flex-direction column
    gap 20px
    align-items flex-start

  &__label
    padding 5px 10px
    color var(--color-white)
    font-weight 600
    font-size rem(12px)
    text-transform uppercase
    background-color var(--color-dark)

  &__title
    display flex
    flex-wrap wrap
    gap 8px
    margin-bottom 0
    color var(--color-white)
    font-size rem(23px)
    +above(48em)
      font-size rem(26px)

  &__text
    max-width 55%
    color var(--color-white)
    &:last-child
      margin-bottom 0
    p
      &:last-child
        margin-bottom 0
