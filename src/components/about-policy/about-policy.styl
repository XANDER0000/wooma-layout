.about-policy
  z-index 5
  display flex
  flex-direction column
  background-color var(--color-dark)

  &__heading
    display flex
    flex-direction column
    align-items center
    max-width 800px
    margin 0 auto
    padding rem(60px) rem(20px)
    color var(--color-white)
    text-align center
    +desktop()
      padding rem(80px) rem(50px)

  &__subtitle
    margin-bottom 15px
    color var(--color-white)
    font-size rem(12px)
    text-transform uppercase

  &__title
    margin-bottom 20px
    color var(--color-white)
    font-size rem(28px)
    +above(48em)
      font-size rem(32px)

  &__text
    p
      &:last-child
        margin-bottom 0

  &__media
    position relative
    height 490px
    overflow hidden
    background-repeat no-repeat
    background-position top center
    background-size cover

    &-frame
      position relative
      width 100%
      height 100%
      overflow hidden

    &-iframe
      position absolute
      top 50%
      left 50%
      width 150%
      height 190%
      object-fit cover
      transform translate(-50%, -50%)
      pointer-events none
      +above(48em)
        width 200%
        height 200%

    &-widget
      position absolute
      bottom 0
      left 0px
      padding 10px
      +above(48em)
        left 10px
        padding 20px
      p
        max-width 800px
        color var(--color-white)
        &:last-child
          margin-bottom 0
