.sidebar
  position fixed
  top 0
  left 0
  z-index 998
  display flex
  flex-direction column
  gap 30px
  justify-content space-between
  width 100%
  min-width 240px
  max-width 100%
  height 100%
  padding 20px 30px 30px
  overflow-y hidden
  background var(--color-white)
  border-right 1px solid var(--color-gray)
  transform translateX(-100%)
  opacity 0
  transition opacity .55s ease, transform .25s ease
  will-change transform
  custom-scrollbar(2px)
  &.is-open
    transform translateX(0%)
    opacity 1
  +above(48em)
    max-width 360px
    padding 75px 40px 60px
  +desktop()
    transform translateX(0%)
    opacity 1

  &__top
    display flex
    flex-direction column
    gap 30px

  &__heading
    display flex
    gap 20px
    align-items center
    justify-content space-between

  &__btn-close
    position relative
    display block
    flex 0 0 auto
    size 20px
    margin 0
    padding 0
    background transparent
    border none
    &:hover
    &:focus-visible
      &::before
        transform rotate(-45deg)
      &::after
        transform rotate(45deg)
    &::before
    &::after
      position absolute
      top 46%
      left 1px
      width 90%
      height 2px
      background-color var(--color-dark)
      transform-origin 50% 50%
      opacity 1
      transition all .2s ease
      content ''
    &::before
      transform rotate(45deg)
    &::after
      transform rotate(-45deg)
    +desktop()
      display none

  &__menu
    margin 0
    padding 0
    list-style none
    &-item
      &:not(&:last-child)
        margin-bottom 8px
    &-link
      font-weight 800
      font-size rem(18px)
      +desktop()
        font-size rem(20px)
      &:hover
      &:focus-visible
        text-decoration none

  &__bottom
    display flex
    flex-direction column
    gap 30px
    &-buttons
      display flex
      flex-wrap wrap
      gap 30px
