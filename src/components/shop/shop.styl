.shop
  display flex
  flex-direction column
  gap 40px
  padding rem(60px) rem(20px)
  +desktop()
    padding rem(80px) rem(50px)

  &__grid
    display grid
    gap 20px

    &--col-5
      grid-template-columns repeat(2, 1fr)
      +above(48em)
        grid-template-columns repeat(3, 1fr)
      +desktop()
        grid-template-columns repeat(4, 1fr)
      +above(85em)
        grid-template-columns repeat(5, 1fr)
    &--col-4
      grid-template-columns repeat(2, 1fr)
      +above(48em)
        grid-template-columns repeat(3, 1fr)
      +desktop()
        grid-template-columns repeat(4, 1fr)
    &--col-3
      grid-template-columns repeat(2, 1fr)
      +above(48em)
        grid-template-columns repeat(3, 1fr)
    &--col-2
      grid-template-columns repeat(2, 1fr)
    &--list
      +above(48em)
        .product-card__img
          width 40%
        & ^[0]__card
          flex-direction row
