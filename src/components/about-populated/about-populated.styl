.about-populated
  padding rem(60px) rem(20px)
  +desktop()
    padding rem(80px) rem(50px)

  &__wrapper
    display flex
    flex-direction column
    gap 30px
    +desktop()
      gap 60px
    +above(48em)
      & ^[0]__item
        &:nth-child(even)
          & ^[0]__item-content
            order -1

  &__item
    display grid
    grid-template-columns 100%
    gap 30px
    align-items center
    +above(48em)
      grid-template-columns 1fr 1fr

    &-img
      overflow hidden
      box-shadow 8px 8px 0px 0px #000000
      transition all .4s ease
      &:hover
        transform translateY(-8px)
      img
        width 100%
        height 100%
        object-fit cover
        object-position center

    &-content
      display flex
      flex-direction column

    &-subtitle
      margin-bottom 15px
      font-size rem(12px)
      text-transform uppercase

    &-title
      margin-bottom 30px
      font-size rem(28px)
      +above(48em)
        font-size rem(32px)

    &-text
      p
        &:last-child
          margin-bottom 0


