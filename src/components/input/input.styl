.input
  display block
  width 100%
  height rem(50px)
  padding 0 rem(24px)
  color var(--color-grey-700)
  font-weight 500
  font-size rem(16px)
  font-family $font-family
  font-variant-numeric lining-nums proportional-nums
  line-height 1.5
  background-color var(--color-grey-200)
  background-clip padding-box
  border 2px solid var(--color-grey-200)
  border-radius rem(100px)
  transition all .2s ease
  appearance none
  ellipsis()
  &:invalid
    box-shadow none
  &:hover
    border-color var(--color-blue-300)
  &:focus-visible
    background-color var(--color-grey-200)
    border-color var(--color-blue-300)
    outline none
  &::placeholder
    color var(--color-grey-600)
    opacity 1
  &:disabled
    color var(--color-grey-700)
    background-color var(--color-grey-400)
    border-color var(--color-grey-400)
    pointer-events none
  &:-webkit-autofill
    transition background-color 10000000s ease-out

  .is-invalid &
    color var(--color-error)
    border-color var(--color-error)

  &--border-white
    color var(--color-white)
    background-color transparent
    border-color var(--color-white)
    &:hover
      border-color var(--color-blue-200)
    &:focus
      border-color var(--color-blue-200)
      outline 2px solid var(--color-blue-400)
    &::placeholder
      color var(--color-blue-20)

  &--ellipsis
    ellipsis()

  &-count-wrapper
    position relative
    input
      padding-right rem(74px)
      ellipsis()

  &-count-length
    position absolute
    top 50%
    right rem(24px)
    display inline-block
    padding 0
    color var(--color-grey-600)
    font-weight 500
    font-size rem(12px)
    line-height 1.4
    text-align right
    transform translateY(-50%)

  &--search
    height 64px
    padding 0 40px
    color var(--color-grey-800)
    font-weight 400
    font-size rem(16px)
    line-height 1
    background-color transparent
    border-color var(--color-grey-400)
    border-style none none solid
    border-width 1px
    border-radius 0
    &:hover
      border-color var(--color-grey-400)
      box-shadow none
    &:focus
      border-color var(--color-blue-400)
      outline none
      box-shadow none
    &::placeholder
      color var(--color-grey-500)
    +above(80em)
      height 52px
      border-color var(--color-grey-600)
      .header--transparent &
        color var(--color-white)
        border-color var(--color-white)
        &:hover
          border-color var(--color-white)
        &:focus
          border-color var(--color-blue-300)
        &::placeholder
          color var(--color-grey-600)
      .header--transparent.header--scrolled &
        color var(--color-grey-800)
        border-color var(--color-grey-600)
        &:hover
          border-color var(--color-grey-600)
        &:focus
          border-color var(--color-blue-300)
        &::placeholder
          color var(--color-grey-600)

  &--lang-search
    height 64px
    padding 0 40px
    color var(--color-grey-800)
    font-weight 400
    font-size rem(16px)
    line-height 1
    background-color transparent
    border-color var(--color-grey-400)
    border-style none none solid
    border-width 1px
    border-radius 0
    &:hover
      border-color var(--color-grey-400)
      box-shadow none
    &:focus
      border-color var(--color-blue-400)
      outline none
      box-shadow none
    &::placeholder
      color var(--color-grey-500)
    +above(80em)
      height 60px
