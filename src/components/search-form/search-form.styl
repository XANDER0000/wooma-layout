.search-form
  position relative
  &__field
    position relative
    width 100%
    +above(80em)
      animation-duration .5s
      animation-timing-function ease
      animation-delay .1s
      animation-fill-mode forwards
      ^[0].is-open &
        animation-name openField

  &__submit
    position absolute
    top 32px
    left 0
    display inline-flex
    align-items center
    justify-content center
    margin-top -16px
    padding 0
    color var(--color-gray)
    background-color transparent
    border none
    border-radius 4px
    transition all .2s ease
    &:hover
    &:focus-visible
      color var(--color-gray-dark)

    .icon
      flex 0 0 auto
      size 20px

  &__input
    width 100%

  &__loading-icon
    position absolute !important
    top 23px
    right 0

  &__suggestions
    position absolute
    bottom 100%
    display flex
    flex-direction column
    gap 10px
    width 100%
    max-height calc(100vh - 210px)
    padding 10px
    background #fff
    border 1px solid var(--color-gray)
    custom-scrollbar(2px)
    &:empty
      display none
    &:not(.is-open)
      display none

  &__suggestion
    display flex
    gap 15px
    align-items flex-start
    transition all .2s ease
    &:hover
    &:focus-visible
      text-decoration none
      background-color var(--color-gray-soft)
    &-img
      flex 0 0 auto
      size 50px
      overflow hidden
      img
        width 100%
        height 100%
        max-height 100%
        object-fit contain
    &-content
      display flex
      flex-direction column
    &-title
      font-size rem(13px)
      line-height 1.4
      strong
        color var(--color-primary)
        font-weight 500
    &-price
      display flex
      flex-wrap wrap
      gap 5px
      color var(--color-dark-soft)
      font-size rem(13px)
      &-old
        text-decoration line-through

  &--panel
    & ^[0]__input
      font-size rem(24px)
      text-align center
      +above(48em)
        font-size rem(36px)
    & ^[0]__suggestions
      position static
      +above(48em)
        &.is-open
          display grid
          grid-template-columns 1fr 1fr
    & ^[0]__submit
      display none

