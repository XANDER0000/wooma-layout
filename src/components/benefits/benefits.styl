.benefits
  display grid
  grid-template-columns repeat(1, 1fr)
  gap 40px
  padding rem(60px) rem(20px)
  border-top 1px solid #e1e2e3
  +above(48em)
    grid-template-columns repeat(2, 1fr)
    gap 20px
    padding rem(80px) rem(50px)
  +desktop()
    grid-template-columns repeat(4, 1fr)

  &__item
    display flex
    gap 15px

    &-icon
      display flex
      flex 0 0 auto
      align-items center
      justify-content center
      size 57px
      border 1px solid var(--color-dark)
      .icon
        size 30px
        fill var(--color-dark)

    &-content
      display flex
      flex-direction column
      gap 8px

    &-title
      margin 0
      color var(--color-dark)
      font-weight 700
      font-size rem(16px)

    &-text
      &:last-child
        margin-bottom 0
      p
        &:last-child
          margin-bottom 0
