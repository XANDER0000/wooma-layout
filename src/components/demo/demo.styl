.demo
  display block
  font-size rem(16px)
  +desktop()
    font-size rem(18px)

  &__header
    margin 0 0 30px
    padding 0 0 10px
    border-bottom 1px solid var(--color-text)

  &__title
    margin 0 0 10px
    font-size 1.8em

  &__title-2
    margin 0 0 .8em
    font-size 1.2em
    &:not(:first-child)
      margin-top 1.7em

  &__title-3
    margin 0 0 .8em
    font-weight bold
    font-size 1em
    &:not(:first-child)
      margin-top 1.5em

  &__title-4
    margin 0 0 .8em
    font-weight bold
    font-size .8em
    &:not(:first-child)
      margin-top 1.5em

  &__note
    margin 0 0 40px
    font-size 16px

  &__item
    margin 0 0 15px

  &__item--in-progress
    opacity .5

  a
    text-decoration none
    &:hover
      color var(--color-hover)

  &__block
    padding-left 1.25rem

  &__row
    display flex
    flex-flow row wrap
    margin 0 -10px -30px

  &__col
    width calc(100% - 20px)
    margin 0 10px 30px
    +above(48em)
      width calc(50% - 20px)
