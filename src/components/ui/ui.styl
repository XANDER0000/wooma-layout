.ui
  font-weight 500

  h4
    color var(--color-grey-700)

  &__title
    margin-bottom 1em

  &__section
    margin-bottom 50px
    padding-top 50px
    border-top 2px solid var(--color-text-light)

  &__section-title
    margin-bottom 45px
    text-transform uppercase

  &__subsection
    padding-top 25px
    border-top 1px dashed #ddd
    &:not(:last-child)
      margin-bottom 30px

  &__subsection-title
    margin-bottom 1em
    font-weight 700

  &__dark
    display inline-block
    padding 20px
    background-color var(--color-text)
    border-radius rem(8px)
    &:not(:last-child)
      margin-bottom 1.5rem

  &__sequence
    --columns 1
    display grid
    grid-template-columns repeat(var(--columns), minmax(0, 1fr))
    gap 20px
    align-items start
    &:not(:last-child)
      margin-bottom 1.5rem
    +above(48em)
      --columns 2
    +above(80em)
      --columns 4
    &--1
      +above(48em)
        --columns 1
      +above(80em)
        --columns 1
    &--2
      +above(48em)
        --columns 1
      +above(80em)
        --columns 2
    &--3
      +above(48em)
        --columns 1
      +above(80em)
        --columns 3
    &--free
      display flex
      flex-flow row wrap
      gap 20px
      align-items flex-start

    // display flex
    // flex-flow row wrap
    // gap 20px
    // align-items flex-start

    &--vcenter
      align-items center

    &--vstretch
      align-items stretch

    // .field
    //   align-self flex-start
    //   width calc(100% - 5px)
    //   +above(48em)
    //     width calc(50% - 10px)
    //   +desktop()
    //     width calc(25% - 15px)

  &__table-breakpoints
    th
      background-color transparent

  &__select
    max-width 100%
    option
      max-width 100%
      ellipsis()

  .final-grade
    &:not(:last-child)
      margin-bottom 20px

  &__color
    display block
    width 112px
    text-align center

  &__color-bg
    display block
    width 100%
    height 80px
    margin-bottom .4rem
    overflow hidden
    border 1px solid #ccc

  &__color-caption
    font-size rem(14px)

  &__grid-demo
    .row > .col
    .row > [class^=col-]
      span
        display block
        width 100%
        margin-bottom 20px
        padding 15px 16px
        font-size rem(15px)
        line-height 20px
        background-color #eee

  &__box
    margin-bottom rem(24px)
    padding rem(16px) rem(12px)
    background-color var(--color-white)
    border-radius rem(24px)
    +desktop()
      padding rem(40px)

  .data-card
    width 280px
    min-height 310px
