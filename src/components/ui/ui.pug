mixin ui(title)
  -
    const params = { ...attributes };
    delete attributes.title;
    params.title = params.title || title;
    
  .ui&attributes(attributes)
    - if (params.title)
      +ui__title(params.title)
    block

mixin ui__title(title)
  -
    const params = { ...attributes };
    delete attributes.title;
    params.title = params.title || title;

  h1.h1.ui__title&attributes(attributes)!= params.title

