mixin ui__sequence()
  -
    const props = initComponent('ui__sequence', attributes, []);
  
  .ui__sequence&attributes(attributes)
    block

mixin ui__dark-block()
  .ui__dark-block&attributes(attributes)
    block

mixin ui__box()
  .ui__box&attributes(attributes)
    block

mixin ui__test()
  - const addClass = (classList, newClass) => {classList = (classList) ? classList + " " + newClass : newClass};

  .ui__test&attributes(attributes)
    p Class:#{attributes.class}

mixin ui__color()
  -
    const params = { ...attributes };
    delete attributes.name;
    delete attributes.color;
    params.name = params.name || "white";
    params.color = params.color || "-";

  .ui__color&attributes(attributes)
    .ui__color-bg(style="background-color: " + params.color)
    .ui__color-caption!= params.name
