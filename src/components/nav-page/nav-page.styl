.nav-page
  position fixed
  bottom 0
  left 0
  z-index 102
  display flex
  align-items center
  width 100%
  min-height 4rem
  padding-top 5px
  background-color var(--color-white)
  box-shadow 0px 0px 8px 0px rgba(0,0,0, 10%)
  transform translateY(100%)
  opacity 0
  transition opacity .25s ease, transform .25s ease
  will-change transform
  +desktop()
    transform translateY(100%)
    opacity 0
    &.is-open
    &.show-always
      transform translateY(100%)
      opacity 0
  &.is-open
  &.show-always
    transform translateY(0)
    opacity 1

  &__inner
    width 100%
    padding-right 10px
    padding-left 10px
    +above(48em)
      padding-right 20px
      padding-left 20px

  &__items
    display flex
    flex-wrap wrap
    gap 4px
    align-items center
    justify-content space-between
