.search-panel
  position fixed
  top 0
  left 0
  z-index 106
  width 100%
  padding 50px 0
  background var(--color-white)
  transform translateY(-100%)
  opacity 0
  transition opacity .25s ease, transform .5s ease
  will-change transform
  &.is-open
    transform translateX(0%)
    opacity 1

  &__container
    display flex
    flex-direction column
    gap 15px
    align-items center

  &__btn-close
    position relative
    display block
    flex 0 0 auto
    size 36px
    margin 0
    padding 0
    background var(--color-bg-soft)
    border 9px solid transparent
    border-radius 50%
    &:hover
    &:focus-visible
      &::before
        transform rotate(-45deg)
      &::after
        transform rotate(45deg)
    &::before
    &::after
      position absolute
      top 46%
      left 1px
      width 90%
      height 2px
      background-color var(--color-dark)
      transform-origin 50% 50%
      opacity 1
      transition all .2s ease
      content ''
    &::before
      transform rotate(45deg)
    &::after
      transform rotate(-45deg)

  &__search-form
    width 100%
    max-width 600px
