.product-widget
  position relative
  overflow hidden
  &:hover
  &:focus-visible
    & ^[0]__bg
      transform scale(1.05)
      opacity 1
      &::after
        opacity .1

  &__bg
    position absolute
    top 0
    left 0
    z-index -1
    width 100%
    height 100%
    background var(--color-gray-soft)
    opacity .8
    transition all .3s ease
    &::after
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color var(--color-dark)
      opacity .1
      transition all .3s ease
      content ''
    img
      width 100%
      height 100%
      object-fit cover
      object-position center
      vertical-align top

  &__link
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__content
    display flex
    flex-direction column
    justify-content space-between
    height 100%
    padding 30px

  &__title
    margin-bottom 0
    font-size rem(20px)

  &__hint
    color var(--color-dark)
    font-size rem(18px)
    text-decoration underline
