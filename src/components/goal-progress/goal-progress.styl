.goal-progress
  display flex
  flex-direction column
  gap 15px

  &__text
    margin 0

  &__wrap
    position relative
    height 6px
    &::before
      position absolute
      top 0
      width 100%
      height 100%
      background var(--color-gray-soft)
      border-radius 4px
      content ""

  &__bar
    position relative
    max-width 100%
    height 100%
    border-radius inherit
    transition all .3s
    &::before
      position absolute
      top 0
      width 100%
      height 100%
      background var(--color-yellow)
      border-radius 4px
      content ""

  &__icon
    position absolute
    top 50%
    right 0
    z-index 1
    display flex
    align-items center
    justify-content center
    width 26px
    height 26px
    font-size rem(12px)
    text-align center
    background #fff
    border 1px solid var(--color-yellow)
    border-radius 50%
    transform translate(50%, -50%)
    .icon
      size 17px
      fill var(--color-yellow)

  &--success
    animation-name shakeY
    animation-duration 1s
    animation-delay .6s
    animation-fill-mode both
    & ^[0]__bar
      &::before
        background-color var(--color-success)
    & ^[0]__icon
      border-color var(--color-success)
      .icon
        size 17px
        fill var(--color-success)
