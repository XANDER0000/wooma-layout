.suggestion-item
  display flex
  gap 15px
  align-items flex-start
  transition all .2s ease
  a&:hover
  a&:focus-visible
    text-decoration none
    background-color var(--color-gray-soft)
  &__img
    flex 0 0 auto
    size 50px
    overflow hidden
    transition all .2s ease
    &--circle
      border-radius 50%
    a&:hover
    a&:focus-visible
      opacity .8
    img
      width 100%
      height 100%
      max-height 100%
      object-fit contain
  &__content
    display flex
    flex-direction column
  &__title
    display block
    margin-bottom 4px
    font-size rem(13px)
    line-height 1.4
    // &:hover
    // &:focus-visible
    //   text-decoration none
    strong
      color var(--color-primary)
      font-weight 500
  &__price
    display flex
    flex-wrap wrap
    gap 5px
    color var(--color-dark-soft)
    font-size rem(13px)
    &-old
      text-decoration line-through
    &-multiplier
      color var(--color-dark)

  &__del
    flex 0 0 auto
    margin 0 0 0 auto
    padding 0
    color var(--color-gray-dark)
    background none
    border none
    transition all .2s ease
    &:hover
    &:focus-visible
      color var(--color-dark)
    .icon
      size 15px

  &__counter
    margin-top 10px

  &__cart
    margin-top 10px

  &--cart
    & ^[0]__title
      font-size rem(15px)
    & ^[0]__price
      font-size rem(14px)
    & ^[0]__img
      size 80px

  &--short
    align-items center
    & ^[0]__title
      font-weight 700
