.hero-banner
  position relative
  display block
  width 100%
  min-height 225px
  margin 0 auto
  padding rem(80px) rem(20px)
  overflow hidden
  background-color var(--color-gray-soft)
  +desktop()
    padding rem(80px) rem(50px)

  &__bg
    position absolute
    top 0
    left 0
    z-index 0
    width 100%
    height 100%
    object-fit cover

  &__content
    position relative
    z-index 2
    display flex
    flex-direction column
    gap 5px

  &__title
    margin-bottom 0
    font-size rem(28px)
    +desktop()
      font-size rem(32px)
