.product-row
  display flex
  flex-wrap wrap
  gap 12px
  align-items center
  justify-content space-between
  padding 15px

  &__content
    display flex
    flex 1 0 auto
    gap 12px
    align-items center
    width 100%
    +above(48em)
      flex 0 0 auto
      width auto

  &__img
    size 80px
    overflow hidden
    img
      width 100%
      height 100%
      object-fit cover
      object-position center
      vertical-align top

  &__info
    display flex
    flex-direction column
    gap 5px
    &-title
      margin 0
      color var(--color-dark)
      font-weight 500
      font-size rem(16px)
    &-price
      color var(--color-gray-dark)
      &-multiple
        color var(--color-dark)

  &__total
    color var(--color-gray-dark)
    font-size rem(16px)

  &__del
    display flex
    align-items center
    justify-content center
    size 54px
    color var(--color-dark)
    background none
    border none
    transition all .2s ease
    &:hover
    &:focus-visible
      color var(--color-red)
    .icon
      size 16px

