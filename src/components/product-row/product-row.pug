include ../counter/counter
include ../icon/icon
include ../checkbox/checkbox

mixin product-row()
  -
    const props = initComponent('product-row', attributes, ['img', 'title']);

  .product-row&attributes(attributes)
    .product-row__content 
      .product-row__img 
        img(src=props.img alt="")
      .product-row__info 
        a(href="product.html").product-row__info-title!= props.title
        span.product-row__info-price 230 000
          span.product-row__info-price-multiple X 1
    +counter().product-row__counter
    span.product-row__total 230 000
    button(type="button").product-row__del 
      +icon('trash')

mixin product-row--short()
  -
    const props = initComponent('product-row', attributes, ['img', 'title', 'checkbox']);

  .product-row.product-row--short&attributes(attributes)
    .product-row__content 
      - if (props.checkbox)
        +checkbox(for="product-id")
          +checkbox__input(name="product-id" id="product-id" value="1" checked)
      .product-row__img 
        img(src=props.img alt="")
      .product-row__info 
        .product-row__info-title!= `${props.title} X 1`
    span.product-row__total 230 000
