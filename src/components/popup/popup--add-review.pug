include ./popup
include ../button/button
include ../form/form--review

mixin popup--add-review()
  -
    const props = initComponent('popup', attributes, []);

  +popup(id="popup-add-review" mod="add-review middle")&attributes(attributes)
    +popup__header()
      h2.popup__title Добавить отзыв
    +popup__main()
      +form--review()
    +popup__footer()
      .popup__buttons
        +button(type="submit" label!="Отправить на&nbsp;модерацию" form="form-review").popup__button-moderate
        +button(label="Очистить" mod="outline").popup__button-clear
