.collapse-item
  display flex
  flex-direction column
  background-color var(--color-white)

  &__toggle
    display flex
    flex-flow row nowrap
    gap rem(8px)
    align-items center
    width 100%
    padding rem(12px) rem(15px)
    background none
    border solid #d5d8dc
    border-width 1px 1px 0px 1px
    transition all .3s ease
    +desktop()
      padding rem(15px) rem(20px)
    ^[0].active &
      border-bottom-width 0px !important
      & ^[0]__title
        color var(--color-primary)
      & ^[0]__icon
        &::before
        &::after
          background-color var(--color-primary)
        &::after
          transform rotate(90deg)
      &:hover
      &:focus-visible
        & ^[0]__title
          color var(--color-base)
        & ^[0]__icon
          &::before
          &::after
            background-color var(--color-base)
    &:hover
    &:focus-visible
      & ^[0]__title
        color var(--color-hover)
      & ^[0]__icon
        &::before
        &::after
          background-color var(--color-hover)

  &__header
    display flex
    flex-direction column
    gap rem(12px)
    align-items flex-start

  &__title
    margin 0
    color var(--color-dark)
    font-weight 500
    font-size rem(16px)
    line-height 1.25
    transition all .2s ease
    +desktop()
      margin 0

  &__icon
    position relative
    flex 0 0 auto
    size 17px
    &::before
      position absolute
      top 50%
      left 50%
      display block
      width 16px
      height 2px
      margin-top -0px
      margin-left -7px
      background-color var(--color-dark)
      transition background-color .3s ease, transform .2s
      content ""
    &::after
      position absolute
      top 50%
      left 50%
      display block
      width 2px
      height 16px
      margin-top -7px
      margin-left 0px
      background-color var(--color-dark)
      transition all .3s ease
      content ""

  &__content
    padding rem(12px) rem(15px)
    border solid #d5d8dc
    border-width 1px 1px 1px 1px
    +desktop()
      padding rem(15px) rem(20px)

  p
    margin 0 0 1em
    font-weight 400
    font-size rem(15px)
    line-height 1.4
    &:last-child
      margin-bottom 0

  ul
    margin 0 0 1em
    padding 0
    font-weight 400
    font-size rem(15px)
    line-height 1.4
    list-style none
    &:last-child
      margin-bottom 0
    li
      margin 0 0 1em
      padding 0
      &:last-child
        margin-bottom 0

