include ./form
include ../field/field
include ../input/input
include ../button/button
include ../inputbox/inputbox
include ../checkbox/checkbox

mixin form--reg()
  +form(mod="reg" data-validate="true")&attributes(attributes)#form-reg
    .form__messages(style="display: none")
      .form__messages-item.form__messages-item--error
        span.form__messages-item-label Неверный логин или пароль
      .form__messages-item.form__messages-item--success
        span.form__messages-item-label Введенные данные совпадают
    .form__fields
      +field(label="Логин *" for="form-reg-email").form__field
        +field__control()
          +input(type="email" name="reg" id="form-reg-email" placeholder="Ваша почта" required)
    .form__text 
      p На ваш электронный адрес будет выслан пароль.
      p Ваши персональные данные будут использоваться для поддержки вашей работы на этом веб-сайте, для управления доступом к вашей учетной записи и для других целей, описанных в нашей 
        a(href="#") политике конфиденциальности.
    .form__tools
      .form__tools-btns
        +button(mod="medium" type="submit" label="Зарегестрироваться").form__submit
