
@keyframes slideTextIn
  0%
    transform translateY(-100%)
    opacity 0
  60%
    transform translateY(20%)
    opacity 1
  100%
    transform translateY(0%)
    opacity 1

@keyframes slideTextOut
  0%
    transform translateY(0)
    opacity 1
  60%
    transform translateY(120%)
    opacity 0
  100%
    transform translateY(100%)
    opacity 0
