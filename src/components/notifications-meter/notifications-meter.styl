.notifications-meter
  position relative
  display flex
  flex 0 0 auto
  flex-direction column
  gap 4px
  align-items center
  width fit-content

  &__icon
    flex 0 0 auto
    transition all .2s ease
    fill var(--color-dark)
    size 24px

  &__link
    display flex
    flex 0 0 auto
    flex-direction column
    align-items center
    &:hover
    &:focus-visible
      text-decoration none
      & ^[0]__icon
        fill var(--color-hover)
      & ^[0]__label
        color var(--color-dark)

  &__count
    position absolute
    top -8px
    right calc(50% - 34px)
    left auto
    display flex
    flex 0 0 auto
    align-items center
    justify-content center
    min-width 20px
    min-height 20px
    padding 3px 4px 2px
    color var(--color-white)
    font-weight 500
    font-size rem(10px)
    line-height 1.3
    background-color var(--color-dark)
    border-radius 50%
    &:empty
      display none

  &__label
    color var(--color-gray-dark)
    font-size rem(12px)
    transition all .2s ease
