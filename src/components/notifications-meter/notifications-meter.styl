.notifications-meter
  display flex
  flex-flow row nowrap
  gap 4px
  align-items center

  &__icon
    flex 0 0 auto
    size 24px
    fill var(--color-grey-700)

  &__count
    display inline-block
    padding 3px 4px 2px
    color var(--color-blue-400)
    font-weight 500
    font-size rem(14px)
    line-height 1.3
    background-color var(--color-grey-200)
    border-radius 100px
    &:empty
      display none
