.product-section-slider
  &__swiper
    position relative
    width 100%
    height 100%

  &__slide
    cursor pointer
    img
      width 100%
      height 100%
      object-fit cover
      object-position center
      vertical-align top

  &__navigation
    position absolute
    top 50%
    left 10px
    z-index 2
    display flex
    align-items center
    justify-content space-between
    width calc(100% - 20px)
    transform translateY(-50%)
    +above(48em)
      left 20px
      width calc(100% - 40px)
    &-prev
    &-next
      display flex
      align-items center
      justify-content center
      size 40px
      color var(--color-dark)
      background var(--color-white)
      border none
      border-radius 50%
      transition all .2s ease
      +above(48em)
        size 50px
      &:hover
      &:focus-visible
        background var(--color-gray)
      &:disabled
        opacity .5
      .icon
        size 20px
        fill var(--color-dark)
        +above(48em)
          size 25px

  &__thumbs
    position absolute
    bottom 20px
    left 10px
    z-index 2
    width calc(100% - 40px)
    +above(48em)
      bottom 40px
      left 20px
      width calc(100% - 40px)
    &-slide
      position relative
      aspect-ratio 1 / 1
      cursor pointer
      &:after
        position absolute
        bottom -3px
        left 0
        width 100%
        height 3px
        background-color var(--color-dark)
        opacity 0
        content ''
        +above(48em)
          bottom -6px
          height 6px
      &.swiper-slide-thumb-active
        &:after
          opacity 1
      img
        width 100%
        height 100%
        object-fit cover
        object-position center
        vertical-align top

  &__tools
    position absolute
    top 20px
    left 10px
    z-index 2
    display flex
    align-items center
    justify-content space-between
    width calc(100% - 20px)
    +above(48em)
      left 20px
      width calc(100% - 40px)

  &__button
    display flex
    align-items center
    justify-content center
    size 30px
    color var(--color-dark)
    background-color var(--color-gray)
    border none
    border-radius 50%
    +above(48em)
      size 40px
    .icon
      size 15px
      +above(48em)
        size 20px

