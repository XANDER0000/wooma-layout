.about-intro
  position relative
  display flex
  align-items center
  justify-content center
  min-height 420px
  padding rem(20px)
  background-color var(--color-gray)
  background-repeat no-repeat
  background-position top center
  background-size cover
  &:after
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color var(--color-dark)
    opacity .2
    content ''
  +above(48em)
    padding rem(40px)
    background-attachment fixed
  +desktop()
    min-height 520px

  &__content
    position relative
    z-index 2
    display flex
    flex-direction column
    gap 15px
    max-width 600px
    color var(--color-white)
    text-align center

  &__subtitle
    font-weight 500
    font-size rem(12px)
    text-transform uppercase

  &__title
    margin-bottom 0
    color var(--color-white)
    font-size rem(32px)
    +above(48em)
      font-size rem(36px)
    +desktop()
      font-size rem(48px)

  &__text
    font-size rem(16px)
    &:last-child
      margin-bottom 0
