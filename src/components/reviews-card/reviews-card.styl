.reviews-card
  display flex
  flex-direction column
  gap 32px
  padding rem(26px) rem(20px)
  border 1px solid var(--color-gray)

  &__user
    display flex
    gap 16px
    align-items center
    &-avatar
      size 45px
    &-content
      display flex
      flex-direction column
      gap 4px
    &-name
      margin 0
      color var(--color-dark)
      font-weight 700
      font-size rem(16px)
      text-transform capitalize
    &-status
      margin 0

  &__content
    display flex
    flex-direction column
    gap 12px
    padding 16px
    background-color #fcfcfc
    border 1px solid #f9f9f9

  &__text
    color var(--color-dark)
    &:last-child
      margin-bottom 0
    p
      &:last-child
        margin-bottom 0


  &__date
    color var(--color-dark)
    font-size rem(12px)

  &__products
    display flex
    flex-direction column
    gap 10px
    margin-top auto

