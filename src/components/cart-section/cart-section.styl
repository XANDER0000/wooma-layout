.cart-section
  padding rem(60px) rem(20px)
  +desktop()
    padding rem(80px) rem(50px)

  &__wrapper
    display flex
    flex-direction column
    gap 30px
    +desktop()
      flex-direction row

  &__form
    display flex
    flex 1 0 auto
    flex-direction column
    gap 15px
    &-coupon
      display flex
      gap 12px

  &__rows
    display flex
    flex-direction column
    gap 15px

  &__row
    border-bottom 1px solid var(--color-gray)
    &:first-child
      border-top 1px solid var(--color-gray)

  &__total
    display flex
    flex-direction column
    gap 20px
    padding 30px
    border 2px solid var(--color-gray)
    +desktop()
      width 34%
    &-title
      margin 0
      color var(--color-dark)
      font-weight 700
      font-size rem(20px)
    &-heading
      display flex
      flex-wrap wrap
      gap 12px
      align-items center
      justify-content space-between
      &-title
      &-sum
        color var(--color-dark)
    &-content
      display flex
      flex-direction column
      gap 10px
      padding 10px
      background-color var(--color-gray-soft)
      &-row
        display flex
        flex-wrap wrap
        gap 10px
        align-items center
        justify-content space-between
        color var(--color-gray-dark)
    &-toggle
      align-self flex-start
      margin 0
      padding 0
      color var(--color-dark)
      font-weight 600
      font-size rem(16px)
      background none
      border none
      transition all .2s ease
      &:hover
      &:focus-visible
        color var(--color-hover)
