.abitur-status
  display flex
  flex-flow row nowrap
  gap 10px
  align-items center
  color var(--color-grey-800)
  font-weight 500
  font-size rem(18px)
  line-height 1.3

  &__dot
    position relative
    top -1px
    flex 0 0 auto
    size 12px
    background-color #abb8d1
    border-radius 50%

    ^[0]--accepted &
      background-color #38c172

    ^[0]--rejected &
      background-color #e57375

    ^[0]--consideration &
      background-color #ffa600

    ^[0]--enrolled &
      background-color #be71ab

    ^[0]--submitted &
      background-color #4c7cff

    ^[0]--no-application &
      background-color #abb8d1
